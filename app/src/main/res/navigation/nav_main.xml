<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.software.somding.presentation.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >

        <action
            android:id="@+id/action_mainFragment_to_categoryFragment"
            app:destination="@id/categoryFragment" />

    </fragment>

    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.software.somding.presentation.category.CategoryFragment"
        android:label="fragment_category"
        tools:layout="@layout/fragment_category" >

        <action
            android:id="@+id/action_categoryFragment_to_projectFragment"
            app:destination="@id/projectFragment" />

    </fragment>

    <fragment
        android:id="@+id/projectFragment"
        android:name="com.software.somding.presentation.project.ProjectFragment"
        android:label="fragment_project"
        tools:layout="@layout/fragment_project" >
    </fragment>

    <fragment
        android:id="@+id/myPageFragment"
        android:name="com.software.somding.presentation.mypage.MyPageFragment"
        android:label="fragment_my_page"
        tools:layout="@layout/fragment_my_page" >
    </fragment>

</navigation>