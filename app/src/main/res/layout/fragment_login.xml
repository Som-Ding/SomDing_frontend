<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginFragment">

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/juaFontKr"
        android:id="@+id/toolbar_title"
        android:textColor="@color/magenta"
        android:textSize="36sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="37dp"
        android:text="솜딩"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/currentPw"
            style="@style/BoldFontKr.22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="로그인"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/toolbar_title"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_title" />

    <androidx.appcompat.widget.AppCompatEditText
        style="@style/RegularFontKr.16"
        android:backgroundTint="@color/gray"
        android:id="@+id/etUserEmail"
        android:layout_width="match_parent"
        android:textColorHighlight="@color/black"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="28dp"
        android:hint="이메일"
        android:singleLine="true"
        android:lines="1"
        android:textColorHint="@color/gray"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentPw" />

    <androidx.appcompat.widget.AppCompatEditText
        style="@style/RegularFontKr.16"
        android:id="@+id/etUserPassword"
        android:backgroundTint="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="28dp"
        android:inputType="textPassword"
        android:hint="비밀번호"
        android:singleLine="true"
        android:lines="1"
        android:textColorHint="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etUserEmail" />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/RegularFontKr.16"
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="65dp"
        android:background="@drawable/bg_solid_magenta_radius_10"
        android:text="로그인"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etUserPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
