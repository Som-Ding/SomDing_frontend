<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.project.ProjectFragment">

    <data>


    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view_pager"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="28dp"
            android:textFontWeight="400"
            android:textSize="12dp"
            android:textColor="#101010"
            android:text="카테고리"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="세부카테고리"
            app:layout_constraintStart_toEndOf="@+id/category"
            app:layout_constraintTop_toBottomOf="@+id/view_pager"
            android:layout_marginLeft="14dp"
            android:textFontWeight="400"
            android:textColor="#101010"
            android:textSize="12dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:text="프로젝트 제목입니다."
            app:layout_constraintStart_toStartOf="@+id/category"
            app:layout_constraintTop_toBottomOf="@+id/category"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:textFontWeight="400"
            android:textColor="#101010"/>
        <TextView
            android:id="@+id/total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/category"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:layout_marginTop="10dp"
            android:text="모인 금액"
            android:textSize="12dp"
            android:textFontWeight="400"
            android:textColor="#101010"
            />
        <TextView
            android:id="@+id/remain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="남은 시간"
            app:layout_constraintTop_toTopOf="@+id/total_price"
            app:layout_constraintEnd_toStartOf="@+id/sponsor"
            android:layout_marginRight="30dp"
            android:textSize="12dp"
            android:textFontWeight="400"
            android:textColor="#101010"
            />
        <TextView
            android:id="@+id/sponsor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="후원자"
            app:layout_constraintTop_toTopOf="@+id/total_price"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="30dp"
            android:textSize="12dp"
            android:textColor="#101010"
            android:textFontWeight="400"
            />
        <TextView
            android:id="@+id/tot_price"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="99,999,999"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@id/total_price"
            android:layout_marginTop="10dp"
            android:textColor="#101010"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원"
            android:textColor="#101010"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@id/tot_price"
            app:layout_constraintStart_toEndOf="@+id/tot_price" />

        <TextView
            android:id="@+id/price_per"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="999"
            android:textColor="#BB2649"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tot_price"
            app:layout_constraintStart_toEndOf="@id/tot_price"
            app:layout_constraintTop_toTopOf="@id/tot_price" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textSize="12dp"
            android:textColor="#BB2649"
            app:layout_constraintStart_toEndOf="@id/price_per"
            app:layout_constraintTop_toTopOf="@id/price_per"

            />
        <TextView
            android:id="@+id/remain_date"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:text="999"
            app:layout_constraintStart_toStartOf="@id/remain"
            app:layout_constraintTop_toBottomOf="@+id/remain"
            android:textSize="16dp"
            android:textColor="#101010"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일"
            android:textColor="#101010"
            app:layout_constraintStart_toEndOf="@id/remain_date"
            app:layout_constraintBottom_toBottomOf="@id/remain_date"
            android:textSize="12dp"
            android:layout_marginBottom="2dp"
            />
        <TextView
            android:id="@+id/sponsor_num"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#101010"
            app:layout_constraintStart_toStartOf="@id/sponsor"
            app:layout_constraintTop_toTopOf="@id/remain_date"
            android:text="9,999"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#101010"
            android:text="명"
            app:layout_constraintStart_toEndOf="@id/sponsor_num"
            app:layout_constraintBottom_toBottomOf="@id/sponsor_num"
            android:layout_marginLeft="5dp"
            android:textSize="12dp"
            android:layout_marginBottom="2dp"
            />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tablayout"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sponsor_num" >
            <com.google.android.material.tabs.TabItem
                android:id="@+id/detail_btn"
                android:text="상세 정보"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
            <com.google.android.material.tabs.TabItem
                android:id="@+id/review_btn"
                android:text="리뷰"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <com.google.android.material.tabs.TabItem
                android:id="@+id/qna_btn"
                android:text="Q&amp;A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.tabs.TabLayout>
        <FrameLayout
            android:id="@+id/main_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tablayout"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>