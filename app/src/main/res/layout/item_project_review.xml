<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/profile_img"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="32dp"
        android:background="#D9D9D9"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/profile_img"
        app:layout_constraintTop_toTopOf="@id/profile_img"
        app:layout_constraintBottom_toBottomOf="@id/profile_img"
        android:text="닉네임"
        android:textSize="12sp"
        android:layout_marginLeft="8dp"
        android:textColor="#101010"
        />
    <ImageView
        android:id="@+id/star"
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:layout_constraintStart_toEndOf="@id/nickname"
        app:layout_constraintTop_toTopOf="@id/nickname"
        app:layout_constraintBottom_toBottomOf="@id/nickname"
        android:layout_marginLeft="5dp"
        android:src="@drawable/icon_review_star"
        />
    <TextView
        android:id="@+id/rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/star"
        app:layout_constraintBottom_toBottomOf="@id/nickname"
       android:text="5.0"
        android:textSize="12sp"
        android:layout_marginLeft="2dp"
        android:textColor="#101010"
        />
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/nickname"
        android:text="2023.08.01"
        android:textSize="12sp"
        android:textColor="#949494"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="28dp"
        />
    <ImageView
        android:id="@+id/review_img1"
        android:layout_width="148dp"
        android:layout_height="107dp"
        app:layout_constraintStart_toStartOf="@id/profile_img"
        app:layout_constraintTop_toBottomOf="@id/profile_img"
        android:background="#D9D9D9"
        android:layout_marginTop="20dp"/>
    <ImageView
        android:id="@+id/review_img2"
        android:layout_width="148dp"
        android:layout_height="107dp"
        app:layout_constraintEnd_toEndOf="@id/date"
        app:layout_constraintTop_toTopOf="@id/review_img1"
        android:background="#D9D9D9"/>
    <TextView
        android:id="@+id/review_content"
        android:layout_width="302dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/review_img1"
        app:layout_constraintTop_toBottomOf="@id/review_img1"
        android:text="개좋아요!!!!!!!!!!!!!!!!!!!"
        android:textSize="12sp"
        android:textColor="#101010"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/review_content"
        app:layout_constraintTop_toBottomOf="@id/review_content"
        android:text="색상 | 개수"
        android:textSize="12sp"
        android:textColor="#949494"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/option"
        android:layout_marginTop="10dp"
        android:background="#D9D9D9"
        android:backgroundTint="#D9D9D9"/>
</androidx.constraintlayout.widget.ConstraintLayout>